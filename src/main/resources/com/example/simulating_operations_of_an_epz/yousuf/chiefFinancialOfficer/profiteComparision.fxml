<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.simulating_operations_of_an_epz.yousuf.chiefFinancialOfficer.ProfiteComparisionController">
    <ImageView fitHeight="576.0" fitWidth="704.0" pickOnBounds="true">
        <image>
            <Image url="@profitYearly.png" />
        </image>
    </ImageView>
   <Label layoutX="254.0" layoutY="21.0" prefHeight="27.0" prefWidth="195.0" style="-fx-background-color: white;" text="Profit Comparison">
      <font>
         <Font name="System Bold" size="20.0" />
      </font>
   </Label>
   <Button layoutX="244.0" layoutY="62.0" mnemonicParsing="false" onAction="#showPiechart" prefHeight="37.0" prefWidth="217.0" text="Show The pie-Chart">
      <font>
         <Font name="System Bold" size="17.0" />
      </font>
   </Button>
   <Button layoutX="33.0" layoutY="24.0" mnemonicParsing="false" onAction="#backbutton" prefHeight="38.0" prefWidth="85.0" style="-fx-background-color: red;" text="Back">
      <font>
         <Font name="System Bold" size="17.0" />
      </font>
   </Button>
   <BarChart fx:id="BudgetChart" layoutX="103.0" layoutY="116.0" style="-fx-background-color: white;" title="Departmental Budget Comparison">
     <xAxis>
       <CategoryAxis label="Date" side="BOTTOM" fx:id="xAxis" />
     </xAxis>
     <yAxis>
       <NumberAxis fx:id="yAxis" label="Values" side="LEFT" />
     </yAxis>
   </BarChart>
</AnchorPane>
